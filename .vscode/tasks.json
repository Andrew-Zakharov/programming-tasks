{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake debug build",
            "type": "shell",
            "command": "cmake",
            "args":[
                "${workspaceFolder}",
                "-G",
                "'MSYS Makefiles'",
                "-D",
                "CMAKE_BUILD_TYPE=Debug"
            ]
        },

        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}